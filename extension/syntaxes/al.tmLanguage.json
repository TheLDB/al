{
  "name": "AL",
  "scopeName": "source.al",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#functions"
    },
    {
      "include": "#types"
    },
    {
      "include": "#constants"
    },
    {
      "include": "#operators"
    },
    {
      "include": "#imports"
    },
    {
      "include": "#enums"
    },
    {
      "include": "#match"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.al",
          "match": "//.*$"
        }
      ]
    },
    "strings": {
      "name": "string.quoted.single.al",
      "begin": "'",
      "end": "'",
      "patterns": [
        {
          "name": "constant.character.escape.al",
          "match": "\\\\."
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.al",
          "match": "\\b(if|else|for|in|return|break|continue|throw|export|fn|struct|const|or|none|void|enum|match)\\b"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "entity.name.function.al",
          "match": "\\bfn\\s+([a-zA-Z_][a-zA-Z0-9_]*)\\b",
          "captures": {
            "1": { "name": "entity.name.function.al" }
          }
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "storage.type.al",
          "match": "\\b(int|string|bool|void)\\b"
        },
        {
          "match": "\\b([A-Z][a-zA-Z0-9_]*)\\b",
          "name": "support.class.al"
        },
        {
          "match": "\\?([A-Z][a-zA-Z0-9_]*|int|string|bool)",
          "name": "storage.type.optional.al"
        }
      ]
    },
    "constants": {
      "patterns": [
        {
          "name": "constant.numeric.al",
          "match": "\\b\\d+(\\.\\d+)?\\b"
        },
        {
          "name": "constant.language.al",
          "match": "\\b(true|false)\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.al",
          "match": "(\\+|-|\\*|/|=|:=|!=|<=|>=|<|>|\\!|\\?|\\.\\.|\\:|=>)"
        }
      ]
    },
    "imports": {
      "patterns": [
        {
          "match": "from\\s+('[^']+'|\"[^\"]+\")\\s+import\\s+([\\w\\s,]+)",
          "captures": {
            "1": { "name": "string.quoted.single.al" },
            "2": { "name": "variable.other.al" }
          }
        }
      ]
    },
    "enums": {
      "patterns": [
        {
          "match": "\\b(enum)\\s+([A-Z][a-zA-Z0-9_]*)",
          "captures": {
            "1": { "name": "keyword.other.enum.al" },
            "2": { "name": "entity.name.type.enum.al" }
          }
        },
        {
          "match": "\\b([A-Z][a-zA-Z0-9_]*)\\.([A-Z][a-zA-Z0-9_]*)",
          "captures": {
            "1": { "name": "support.class.al" },
            "2": { "name": "constant.other.enum.al" }
          }
        }
      ]
    },
    "match": {
      "patterns": [
        {
          "begin": "\\bmatch\\b",
          "end": "\\}",
          "beginCaptures": {
            "0": { "name": "keyword.control.match.al" }
          },
          "patterns": [
            {
              "match": "=>",
              "name": "keyword.operator.arrow.al"
            },
            {
              "include": "#enums"
            },
            {
              "include": "#strings"
            },
            {
              "include": "#constants"
            },
            {
              "include": "#comments"
            },
            {
              "include": "$self"
            }
          ]
        }
      ]
    }
  }
}
